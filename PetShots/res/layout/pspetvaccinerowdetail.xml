<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="5dip" >

    <!-- ListRow Left sied Thumbnail image -->
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:background="@color/transparent"
        >
	    <!-- Vaccine Name -->
	    <TextView
	        android:id="@+id/tvVaccineRowColumn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"
	        android:textColor="@color/white"
	        android:layout_weight="1"
	        android:text="@string/strDeworming"
	        android:textAppearance="?android:attr/textAppearanceSmall"/>
	    <!-- Date -->
	    <TextView
	        android:id="@+id/tvVaccineDateColumn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"
	        android:textColor="@color/white"
	        android:layout_weight="1"
	        android:text="@string/strtblSampleDate"
	        android:textAppearance="?android:attr/textAppearanceSmall"/>
	    <!-- Due Date -->
	    <TextView
	        android:id="@+id/tvVaccineDueDateColumn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"
	        android:layout_weight="1"
	        android:text="@string/strtblSampleDate"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="@color/white"/>
	    <!-- Doctor -->
	    <TextView
	        android:id="@+id/tvVaccineDocColumn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"
	        android:layout_weight="1"
	        android:text="@string/strtblSampleDoc"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>